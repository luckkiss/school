package {
	import laya.display.Stage;
	import laya.utils.Stat;
	import laya.wx.mini.MiniAdpter;
	public class Root {
		
		public function Root() {
			//初始化微信小游戏
			MiniAdpter.init();
			//初始化引擎
			Laya3D.init(0, 0,true);
			
			//适配模式
			Laya.stage.scaleMode = Stage.SCALE_FULL;
			Laya.stage.screenMode = Stage.SCREEN_NONE;

			//开启统计信息
			Stat.show();
			
			
		}		
	}
}