package view
{
	import laya.display.Sprite;
	
	public class Candle extends Sprite
	{
		private var chartWidth: Number = 960;
		private var chartHeight: Number = 140;
		
		private var barWidth: Number = 14;
		
		public function Candle()
		{
			super();
		}
		
		public function setChartSize(width: Number, height: Number): void {
			this.chartWidth = width;
			this.chartHeight = height;
		}
		
		public function draw(index: int, min: Number, max: Number, open: Number, close: Number, lowest: Number, highest: Number): void {
			this.index = index;
			this.min = min;
			this.max = max;
			this.open = open;
			this.close = close;
			this.lowest = lowest;
			this.highest = highest;
			this.redraw();
		}
		
		private function redraw(): void {
			var cx: Number = this.index * this.barWidth;
			var cy: Number = (this.highest - this.min) / (this.max - this.min) * this.chartHeight;
			var barHeight: Number = (this.highest - this.lowest) / (this.max - this.min) * this.chartHeight;
			this.graphics.drawRect(cx, cy, this.barWidth, barHeight);
		}
	}
}