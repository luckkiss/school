package animals
{
	public class Horse
	{
		public var name: String;
		public var isWhite: Boolean = false;
		
		public function Horse()
		{
		}
		
		public function idle(): void {
			var kind: String;
			if(this.isWhite) {
				kind = 'white';
			} else {
				kind = 'black';
			}
			console.log("Hi, I'm " + this.name + ", I'm a " + kind + 'horse!');
		}
	}
}